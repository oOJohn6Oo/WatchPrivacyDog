<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Coming soon" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_should_hook_att_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingHorizontal="@dimen/space_large"
            android:paddingVertical="@dimen/space_extra_large"
            android:text="@string/should_hook"
            android:textSize="20sp"
            app:thumbTint="@color/colorPrimary"
            app:trackTint="?android:attr/colorControlHighlight"
            tools:checked="true" />

        <Button
            android:id="@+id/btn_clear_invocation_att_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_large"
            android:layout_marginTop="300dp"
            android:background="@drawable/button_background"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/clear_data" />

        <Button
            android:id="@+id/btn_show_invocation_att_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_large"
            android:layout_marginTop="@dimen/space_large"
            android:background="@drawable/button_background"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/show_invocation" />
    </LinearLayout>
</ScrollView>